  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jose": "^5.9.6",
    "neverthrow": "^8.2.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
