{
  "name": "@pingidentity/aic-mcp-sdk",
  "version": "0.0.1",
  "description": "AIC authentication SDK for MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
